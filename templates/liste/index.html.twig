{# templates/accueil/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    <body>
        <div class='flex space-between align-center'>
            <h1>{{ page_title }}</h1>
            <a href={{'/'}}>retour au menu</a>
        </div>

        <div class='flex column marg-0-10 border radius-25 relative'>
            {% for article in articles %}
                {% if article.getId() is divisible by(2) %}
                    <div class='flex space-between align-center radius-25 pad-0-10 bg-color-blue'>
                {% else %}
                    <div class='flex space-between align-center radius-25 pad-0-10 bg-color-grey'>
                {% endif %}
                    {% if type is same as('categorie') %}
                        <a href={{'/' ~ type ~ '/' ~ article.getId()}}>Modifier</a>
                    {% else %}
                        <a href={{'/' ~ type ~ '/' ~ article.getId()}}>Plus d'infos</a>
                    {% endif %}
                    <p>{{article.getNom()}}</p>
                    {% if article.getDateAchat() is defined %}
                        <p>{{article.getDateAchat()|date('Y-m-d')}}</p>
                    {% endif %}
                    <a>Supprimer</a>
                </div>
            {% endfor %}
            <a class='on-top-center' href={{'/' ~ type ~ '/add'}}>
                <button class='pad-25-low-bottom marg-0 radius-25-top bg-color-red'>ajouter</button>
            </a>
        </div>
    </body>
{% endblock %}