{% extends 'base.html.twig' %}

{% block title %}{{ my_title }}{% endblock %}

{% block body %}
    <div class='container min-vh-100'>
        <div class='d-flex flex-wrap-reverse justify-content-between my-3'>
                <h1 class='my-3' >{{ my_title }}</h1>
                <a class='my-3'  href={{'/article'}}>
                    <button type='button' class='btn btn-danger'>annuler</button>
                </a>
                <a class='my-3'  href={{'/'}}>
                    <button type='button' class='btn btn-primary'>retour au menu</button>
                </a>
        </div>


        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.prix) }}
            {{ form_row(registrationForm.fichier_photo) }}
            {{ form_row(registrationForm.date_achat) }}
            {{ form_row(registrationForm.date_garantie) }}
            {{ form_row(registrationForm.lieu_achat) }}
            {{ form_row(registrationForm.zone_saisie) }}
            {{ form_row(registrationForm.notice) }}
            {{ form_row(registrationForm.categorie) }}

            <button type="submit" class="btn btn-primary">Ajouter</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
